<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.udacity.sandwichclub.DetailActivity">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/view_margin_bottom"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/ingredients_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_ingredients_label"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/label_margin_left"
            android:layout_marginStart="@dimen/label_margin_left" />

        <TextView
            android:id="@+id/ingredients_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tv_margin_left"
            android:layout_marginStart="@dimen/tv_margin_left"
            android:layout_marginRight="@dimen/tv_margin_right"
            android:layout_marginEnd="@dimen/tv_margin_right" />

        <TextView
            android:id="@+id/description_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_description_label"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/label_margin_left"
            android:layout_marginStart="@dimen/label_margin_left" />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_margin_bottom"
            android:layout_marginLeft="@dimen/tv_margin_left"
            android:layout_marginStart="@dimen/tv_margin_left"
            android:layout_marginRight="@dimen/tv_margin_right"
            android:layout_marginEnd="@dimen/tv_margin_right" />

        <TextView
            android:id="@+id/origin_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_place_of_origin_label"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/label_margin_left"
            android:layout_marginStart="@dimen/label_margin_left" />

        <TextView
            android:id="@+id/origin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_margin_bottom"
            android:layout_marginLeft="@dimen/tv_margin_left"
            android:layout_marginStart="@dimen/tv_margin_left"
            android:layout_marginRight="@dimen/tv_margin_right"
            android:layout_marginEnd="@dimen/tv_margin_right" />

        <TextView
            android:id="@+id/also_known_as_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_also_known_as_label"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/label_margin_left"
            android:layout_marginStart="@dimen/label_margin_left" />

        <TextView
            android:id="@+id/also_known_as_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tv_margin_left"
            android:layout_marginStart="@dimen/tv_margin_left"
            android:layout_marginRight="@dimen/tv_margin_right"
            android:layout_marginEnd="@dimen/tv_margin_right" />

    </LinearLayout>
</ScrollView>